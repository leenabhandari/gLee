<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clickPostActivity"
   android:background="@drawable/backfinal">

    <EditText
        android:id="@+id/edit_points_click"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="119dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Enter points"
        android:inputType="number"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="166dp"
        android:fontFamily="@font/advent_pro"
        android:text="Enter the points you want to pay to this user:"
        android:textColor="@color/textDark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pay_btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/edit_points_click"
        android:layout_marginEnd="23dp"
        android:text="Pay"
        android:theme="@style/PrimaryButton" />

    <TextView
        android:id="@+id/user_name_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172dp"
        android:fontFamily="@font/advent_pro"
        android:text="user name"
        android:textColor="@color/textLight"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/user_points_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="242dp"
        android:fontFamily="@font/advent_pro"
        android:text="points"
        android:textColor="@color/textLight"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/textView4_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="78dp"
        android:text="Your wallet points:"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/your_points_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4_click"
        android:layout_toEndOf="@+id/textView6"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDarker"
        android:textSize="18sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_pic_click"
        android:layout_width="142dp"
        android:layout_height="138dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:civ_border_color="@color/textLight"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/user_name_click"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:fontFamily="@font/advent_pro"
        android:text="Phone:"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/user_name_click"
        android:layout_alignStart="@+id/click_age"
        android:fontFamily="@font/advent_pro"
        android:text="Age:"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="252dp"
        android:fontFamily="@font/advent_pro"
        android:text="Points:"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/click_phone"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/user_name_click"
        android:fontFamily="@font/advent_pro"
        android:text="TextView"
        android:textColor="@color/textLight" />

    <TextView
        android:id="@+id/click_age"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/user_name_click"
        android:fontFamily="@font/advent_pro"
        android:text="TextView"
        android:textColor="@color/textLight" />


</RelativeLayout>